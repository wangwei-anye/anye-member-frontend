      // }
    </script>
  </head>
  <body class="rootspin">

    <div id="rootspin">
      <span class="ant-spin-dot ant-spin-dot-spin">
        <i></i><i></i><i></i><i></i>
      </span>
    </div>

    <div id="root"></div>
    <script src="/flexible.min.js"></script>
    <script>
      var u = navigator.userAgent;
      var isAndroid = u.indexOf("Android") > -1 || u.indexOf("Linux") > -1;
      var isiOS = !!u.match(/\(i[^;]+;( U;)? CPU.+Mac OS X/);
      if (document.querySelector && document.body.classList) {
        document
          .querySelector("html")
          .classList.add(isAndroid ? "android" : isiOS ? "ios" : "pc");
      }
      window.addEventListener("pageshow", function (e) {
        if (e.persisted) {
          window.location.reload();
        }
        if (window.sdk) {
          if (window.sdk.getPlatform() !== "web") {
            window.sdk.app && window.sdk.app.hideHeader();
          }
        }
      });
      // if (window.location.host.indexOf('.hk01.com') === -1) {
      //   var vConsole = new VConsole();
      // }
    </script>
  </body>
</html>
